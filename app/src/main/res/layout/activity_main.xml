<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView_cam"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:gravity="center_vertical"
        android:text="@string/camera_string"
        android:textColor="@color/black"
        android:background="@color/red"
        app:barrierMargin="1dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_pic"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="72dp"
        android:background="@color/purple_500"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:text="@string/picture_string"
        android:textColor="@color/black"
        app:barrierMargin="1dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_act"
        android:layout_width="match_parent"
        android:layout_height="72dp"
        android:layout_marginTop="144dp"
        android:background="@color/green"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:text="@string/activity_string"
        android:textColor="@color/black"
        app:barrierMargin="1dp"
        android:clickable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView_emailValues"
        android:layout_width="411dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="216dp"
        android:background="@color/pink"
        android:gravity="center_vertical"
        android:orientation="vertical"
        app:barrierMargin="1dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/send_button"
        android:layout_width="92dp"
        android:layout_height="38dp"
        android:layout_marginTop="24dp"
        android:background="@color/blue"
        android:color="@color/blue"
        android:text="@string/send_button"
        android:textColor="@color/black"
        android:textSize="10sp"
        android:enabled="false"
        android:onClick="sendEmail"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.902"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView_emailValues" />

    <ImageView
        android:id="@+id/image_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        />

</android.support.constraint.ConstraintLayout>